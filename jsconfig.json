{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"jsx": "react-jsx",
		"lib": ["ESNext", "DOM", "DOM.Iterable"],
		"allowJs": true,
		"checkJs": false,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": false,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"],
			"@shared/*": ["src/shared/*"],
			"@pages/*": ["src/pages/*"],
			"@app/*": ["src/app/*"],
			"@tests/*": ["tests/*"],
			"@i18n/*": ["src/i18n/*"]
		}
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist", "build", "stats.html"]
}
